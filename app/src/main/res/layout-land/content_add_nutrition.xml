<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddNutritionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Diet Name: "
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:id="@+id/textDietNameLabel"
        android:paddingTop="25dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:id="@+id/textDietName"
        android:layout_toRightOf="@+id/textDietNameLabel"
        android:layout_marginTop="5dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_marginTop="5dp"
        android:id="@+id/btnDatePicker"
        android:layout_below="@+id/textDietNameLabel"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDate"
        android:layout_marginTop="5dp"
        android:hint="YYYY-MM-DD"
        android:ems="10"
        android:layout_toRightOf="@+id/btnDatePicker"
        android:layout_below="@+id/textDietNameLabel"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_marginTop="5dp"
        android:id="@+id/btnTimePicker"
        android:layout_below="@+id/btnDatePicker"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTime"
        android:hint="HH:MM"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:layout_below="@id/btnDatePicker"
        android:layout_toRightOf="@+id/btnTimePicker"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:text="Quantity: "
        android:id="@+id/textQuantityLabel"
        android:layout_below="@+id/textTime"
        android:paddingTop="25dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_alignLeft="@+id/textDate"
        android:id="@+id/textQuantity"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/textQuantityLabel"
        android:layout_below="@+id/textTime"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:text="Comment:)"
        android:id="@+id/textCommentLable"
        android:layout_below="@+id/textQuantity"
        android:paddingTop="25dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_alignLeft="@+id/textDate"
        android:ems="10"
        android:id="@+id/textComment"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/textCommentLable"
        android:layout_below="@+id/textQuantity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/AddNutritionButton"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="88dp"
        android:layout_toRightOf="@+id/textDietName"
        android:layout_below="@+id/textDietNameLabel"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/AddNutritionButton"
        android:text="Cancel"
        android:id="@+id/CancelNutritionButton"
        android:layout_toRightOf="@+id/textComment"
        android:layout_below="@+id/textTime" />

</RelativeLayout>
