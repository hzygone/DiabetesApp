<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="home.diabetesapp.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#FFFFFF">

    <Button
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:text="Activity"
        android:id="@+id/ActivityButton"
        android:backgroundTint="#FFA726"
        android:textColor="#FFFFFF"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:text="Blood Glucose"
        android:id="@+id/BGLbutton"
        android:layout_toEndOf="@+id/ActivityButton"
        android:backgroundTint="#ED5454"
        android:textColor="#FFFFFF"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:text="Medication"
        android:id="@+id/MedicationButton"
        android:layout_below="@+id/ActivityButton"
        android:backgroundTint="#35B7F3"
        android:textColor="#FFFFFF"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:text="Nutrition"
        android:id="@+id/NutritionButton"
        android:layout_below="@+id/BGLbutton"
        android:layout_toEndOf="@+id/MedicationButton"
        android:backgroundTint="#69BA6D"
        android:textColor="#FFFFFF"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="260dp"
        android:text="Regimen"
        android:id="@+id/RegimenButton"
        android:layout_toRightOf="@+id/NutritionButton"
        android:backgroundTint="#78909C"
        android:textColor="#FFFFFF"
        />

</RelativeLayout>
