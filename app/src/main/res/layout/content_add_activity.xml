<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="home.diabetesapp.AddActivityActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/CancelActivityButton"
        android:layout_toEndOf="@+id/AddActivityButton"
        android:layout_below="@+id/ActivityDuration" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/AddActivityButton"
        android:layout_marginStart="80dp"
        android:layout_below="@+id/ActivityDuration"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ActivityDuration"
        android:layout_marginTop="15dp"
        android:layout_alignEnd="@+id/CancelActivityButton"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ActivityTime"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="duration\n(minutes)"
        android:id="@+id/duration"
        android:layout_toEndOf="@+id/ActivityDuration"
        android:layout_below="@+id/ActivityTime"
        android:paddingTop="25dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/ActivityDate"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/ActivityTime"
        android:layout_below="@id/ActivityDate"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date"
        android:id="@+id/ActivityDateLabel"
        android:layout_toEndOf="@id/ActivityDate"
        android:paddingTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Start time"
        android:id="@+id/ActivityTimeLabel"
        android:layout_below="@id/ActivityDate"
        android:layout_toEndOf="@id/ActivityTime"
        android:paddingTop="22dp"/>

</RelativeLayout>
