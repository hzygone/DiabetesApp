<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="home.diabetesapp.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#3e5383">

    <Button
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:text="Activity"
        android:textStyle="bold"
        android:id="@+id/ActivityButton"
        android:background="@drawable/exercise_icon"
        android:textColor="#07c3e9"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:text="Blood Glucose"
        android:id="@+id/BGLbutton"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/ActivityButton"
        android:background="@drawable/bglevel_icon"
        android:textColor="#ea0707"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/ActivityButton" />

    <Button
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:text="Medication"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:id="@+id/MedicationButton"
        android:layout_below="@+id/ActivityButton"
        android:textStyle="bold"
        android:background="@drawable/medication_icon"
        android:textColor="#0d1df9"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:text="Nutrition"
        android:id="@+id/NutritionButton"
        android:layout_below="@+id/BGLbutton"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/MedicationButton"
        android:background="@drawable/nutrition_icon"
        android:textColor="#c4ce09"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/MedicationButton" />

    <Button
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:text="Regimen"
        android:layout_marginTop="15dp"
        android:id="@+id/RegimenButton"
        android:layout_below="@+id/MedicationButton"
        android:background="@drawable/regimen_icon"
        android:textColor="#ffffff"
        android:textStyle="bold"
        />

</RelativeLayout>
